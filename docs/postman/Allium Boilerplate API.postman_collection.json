	"event": [
		{
			"listen": "prerequest",
			"script": {
				"type": "text/javascript",
				"packages": {},
				"requests": {},
				"exec": [
					"const crypto = require('crypto-js');",
					"",
					"const apiKey = pm.environment.get(\"SIGNATURE_API_KEY\");",
					"const secretKey = pm.environment.get(\"SIGNATURE_SECRET_KEY\");",
					"",
					"const requestUrl = pm.request.url.toString();",
					"",
					"const isPublicEndpoint = requestUrl.includes(\"login\") || requestUrl.includes(\"register\");",
					"if (isPublicEndpoint) console.log(\"ℹ️ Public Endpoint detected (Login/Register). Ignoring Access Token.\");",
					"",
					"const accessToken = !isPublicEndpoint ? pm.environment.get(\"ACCESS_TOKEN\") ?? \"\" : \"\";",
					"",
					"if (!apiKey || !secretKey) {",
					"    console.warn(\"⚠️ Signature Config (API Key/Secret) missing in Environment!\");",
					"}",
					"",
					"const timestamp = Math.floor(Date.now() / 1000).toString();",
					"",
					"const payload = `${apiKey}:${accessToken}:${timestamp}`;",
					"",
					"console.log(`Signing Payload: [${payload}]`);",
					"",
					"if (secretKey) {",
					"    const signature = crypto.HmacSHA256(payload, secretKey).toString(crypto.enc.Hex);",
					"",
					"    pm.environment.set(\"SIGNATURE\", signature);",
					"    pm.environment.set(\"TIMESTAMP\", timestamp);",
					"",
					"    pm.request.headers.add({ key: 'x-signature', value: signature });",
					"    pm.request.headers.add({ key: 'x-timestamp', value: timestamp });",
					"",
					"    console.log(\"Signature injected: \", signature)",
					"} else {",
					"    console.log(\"Skip signing: No Secret Key\")",
					"}"
				]
			}
		},
